<% include ./partials/header %>
<div class="ui main text container segment">
  <div class="ui huge header">Edit <%= blog.title %></div>
  <form class="ui form"  action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
    <div class="field">
      <label for="">Tittle</label>
        <input type="text" name="blog[title]" value="<%= blog.title %>"  />
    </div>
    <div class="field">
      <label for="">ImageUrl</label>
      <input type="text" name="blog[image]" value="<%= blog.image %>" placeholder="Image Link">
    </div>

    <div class="field">
      <label for="">Description</label>
      <textarea name="blog[body]" rows="8" cols="80" ><%= blog.body %></textarea>
    </div>
    <input  class="ui purple big basic button" type="submit" name="" value="Submit">
  </form>

</div>
